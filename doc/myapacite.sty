%


\def\nocite#1{%
    \@bsphack%
    \if@filesw{%
        \immediate\write\@auxout{\string\citation{#1}}}%
    \fi%
    \@for\@citeb:=#1\do{%
        \@ifundefined{b@\@citeb}%
          {\edef\B@my@dummy{*}%
           \ifx\@citeb\B@my@dummy%
           \else%
             \@warning{Citation `\@citeb' on page \thepage\space undefined}%
           \fi%
          }%
          {\global\expandafter\def\csname flag@\@citeb\endcsname{DUMMY}}%
    }%
    \@esphack%
